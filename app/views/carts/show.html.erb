<h1>Your Shopping Cart</h1>

<% if @cart_items.length == 0 %>
  <h1>No items added</h1>
<% end %>
<% @cart_items.each do |cart_item| %>
  <div class="d-flex justify-content-left align-items-center">
  <p class="m-0 mx-2"><%= cart_item.item.name %> - $<%= cart_item.item.price %> x <%= cart_item.quantity %></p>
  <%= button_to 'Remove Item', cart_cart_item_path(cart_item, cart_id: @cart.id), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
  </div>
<% end %>
<h3>Total cost: $<%= @total_cost %></h3>

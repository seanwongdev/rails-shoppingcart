<h1>Your Shopping Cart</h1>

<% if @cart_items.length == 0 %>
  <h1>No items added</h1>
<% end %>
<% @cart_items.each do |cart_item| %>
  <p><%= cart_item.item.name %> - $<%= cart_item.item.price %> x <%= cart_item.quantity %></p>
  <%= link_to 'Remove Item', cart_cart_item_path(@cart,cart_item), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
<% end %>

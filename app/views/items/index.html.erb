<%= link_to 'Create new item', new_admin_item_path %>

<% @items.each do |item| %>

    <div class="card-product">
      <div class="card-product-infos">
        <h2><%= item.name %></h2>
        <p><%= item.description %></p>
        <p>$<%= item.price %></p>
      </div>
      <%= link_to "Check this out!",item_path(item) %>
      <%= button_to 'Edit Item', edit_admin_item_path(item), method: :get %>
      <%= button_to 'Delete Item', admin_item_path(item), method: :delete, data: { turbo_confirm: 'Are you sure?' } %>
    </div>



<% end %>

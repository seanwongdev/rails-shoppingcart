 <h1><%= @item.name %></h1>
 <p><%= @item.description %></p>
 <p><%= @item.price %></p>

<%= form_for CartItem.new, url: cart_cart_items_path(@cart), method: :post do |f| %>
  <%= hidden_field_tag :item_id, @item.id %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity, value: 1, min: 1 %>
  <%= f.submit 'Add to Cart' %>
<% end %>

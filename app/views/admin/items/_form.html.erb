<%= simple_form_for(item) do |f| %>

  <%= f.input :name,
    label: "Name of item",
    label_html: { class: "" },
    placeholder: "eg. Title of Book",
    input_html: { class: "" } %>
  <%= f.input :description,
    label: "Give a short description of the item",
    label_html: { class: ""},
    placeholder: "eg. This is a very engaging read",
    input_html: { class: "" } %>
  <%= f.input :price,
    label: "Price of item",
    label_html: { class: ""},
    placeholder: "eg. 32.39",
    input_html: { class: "" } %>

  <%= f.button :submit, 'Submit', class: "btn btn-success mt-2" %>

<% end %>

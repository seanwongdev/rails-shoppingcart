

<%= simple_form_for(@item, url: admin_item_path) do |f| %>

  <%= f.input :name,
    label: "Name of item",
    label_html: { class: "" },
    placeholder: "eg. Wakeboard Name",
    input_html: { class: "" } %>
  <%= f.input :description,
    label: "Give a short description of the item",
    label_html: { class: ""},
    placeholder: "eg. This is board suitable for beginners...",
    input_html: { class: "" } %>
  <%= f.input :price,
    label: "Price of item",
    label_html: { class: ""},
    placeholder: "eg. 889",
    input_html: { class: "" } %>

  <%= f.button :submit, 'Submit', class: "btn btn-success mt-2" %>

<% end %>
